<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingActivity"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/landing_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang!"
            android:textSize="32sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="di Aplikasi Posyandu"
            android:textSize="32sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/landing_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/landing_txt"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:maxWidth="300dp"
        android:maxHeight="300dp"/>

    <TextView
        android:id="@+id/landing_txt2"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/landing_img"
        android:layout_marginTop="20dp"
        android:text="Dapatkan informasi terbaru dan layanan kesehatan untuk ibu dan anak di Posyandu."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Mulai"
        android:layout_below="@id/landing_txt2"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16dp"/>

</RelativeLayout>
